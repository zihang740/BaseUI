<?xml version="1.0" encoding="utf-8"?>
<com.hzh.frame.widget.xtitleview.TitleView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/base_bg_title"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/comn_title_left"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="14dp"
            android:scaleType="centerInside"
            android:src="@mipmap/base_back_white" />

        <TextView
            android:id="@+id/comn_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="160dp"
            android:maxLines="1"
            android:text="@string/base_title"
            android:textColor="@color/base_title_content"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/comn_title_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:gravity="center"
            android:minWidth="48dp"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">

            <ImageView
                android:id="@+id/comn_title_right_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:src="@mipmap/base_title_right_white_icon2" />

            <TextView
                android:id="@+id/comn_title_right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:text="@string/base_message"
                android:textColor="@color/base_title_content"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/titleLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/base_title_line" />
</com.hzh.frame.widget.xtitleview.TitleView>